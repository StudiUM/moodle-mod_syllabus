{{!
    Evaluations template section.

    Context variables required for this template:
    * hasevaluation
    * evaluationslist
        * evaluationdate
        * activities
        * learningobjectives
        * evaluationcriteria
        * weightings
    * evaluationabsence
    * workdeposits
    * authorizedmaterial
    * languagequality
    * successthreshold
}}

{{#hasevaluation}}
    <h3>{{#str}} assessments, mod_syllabus {{/str}}</h3>
    
    {{! Section Évaluations - Calendrier des évaluations }}
    <h4>{{#str}} assessmentcalendar, mod_syllabus {{/str}}</h3>
    {{#evaluationslist}}
        <table class="greytable" cellpadding="0" cellspacing="0">
            <tr>
                <th>
                    {{#userdate}} {{evaluationdate}}, {{#str}} strftimedate {{/str}} {{/userdate}}
                </th>
                <td>
                    <table class="subtable" cellpadding="1">
                        <tr {{#iseven_activities}}class="even"{{/iseven_activities}}>
                            <th>{{#str}} assessmentcalendar_activities, mod_syllabus {{/str}}</th>
                            <td>{{activities}}</td>
                        </tr>
                        <tr {{#iseven_learningobjectives}}class="even"{{/iseven_learningobjectives}}>
                            <th>{{#str}} assessmentcalendar_learningobjectives, mod_syllabus {{/str}}</th>
                            <td>{{learningobjectives}}</td>
                        </tr>
                        {{#evaluationcriteria}}
                            <tr {{#iseven_evaluationcriteria}}class="even"{{/iseven_evaluationcriteria}}>
                                <th>{{#str}} assessmentcalendar_evaluationcriteria, mod_syllabus {{/str}}</th>
                                <td>{{evaluationcriteria}}</td>
                            </tr>
                        {{/evaluationcriteria}}
                        <tr {{#iseven_weightings}}class="even"{{/iseven_weightings}}>
                            <th>{{#str}} assessmentcalendar_weightings, mod_syllabus {{/str}}</th>
                            <td>{{weightings}}</td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>
        {{^is_last}}<p class="spacer"></p>{{/is_last}}
    {{/evaluationslist}}

    {{! Section Évaluations - Consignes et règles pour les évaluations }}
    <h4>{{#str}} rulesassessments, mod_syllabus {{/str}}</h4>
    <table class="greyborder">
        {{#evaluationabsence}}
            <tr {{#iseven_evaluationabsence}}class="even"{{/iseven_evaluationabsence}}>
                <th>{{#str}} evaluationabsence_cmp, mod_syllabus {{/str}}</th>
                <td>{{evaluationabsence}}</td>
            </tr>
        {{/evaluationabsence}}
        {{#workdeposits}}
            <tr {{#iseven_workdeposits}}class="even"{{/iseven_workdeposits}}>
                <th>{{#str}} workdeposits, mod_syllabus {{/str}}</th>
                <td>{{workdeposits}}</td>
            </tr>
        {{/workdeposits}}
        {{#authorizedmaterial}}
            <tr {{#iseven_authorizedmaterial}}class="even"{{/iseven_authorizedmaterial}}>
                <th>{{#str}} authorizedmaterial, mod_syllabus {{/str}}</th>
                <td>{{authorizedmaterial}}</td>
            </tr>
        {{/authorizedmaterial}}
        {{#languagequality}}
            <tr {{#iseven_languagequality}}class="even"{{/iseven_languagequality}}>
                <th>{{#str}} languagequality, mod_syllabus {{/str}}</th>
                <td>{{languagequality}}</td>
            </tr>
        {{/languagequality}}
        {{#successthreshold}}
            <tr {{#iseven_successthreshold}}class="even"{{/iseven_successthreshold}}>
                <th>{{#str}} successthreshold, mod_syllabus {{/str}}</th>
                <td>{{successthreshold}}</td>
            </tr>
        {{/successthreshold}}
    </table>
{{/hasevaluation}}
