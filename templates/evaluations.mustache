{{!
    Evaluations template section.

    Context variables required for this template:
    * hasevaluation
    * evaluationslist
        * evaluationdate
        * activities
        * learningobjectives
        * evaluationcriteria
        * weightings
    * evaluationabsence
    * workdeposits
    * authorizedmaterial
    * languagequality
    * successthreshold
}}

{{#hasevaluation}}
    <h3>{{#str}} assessments, mod_syllabus {{/str}}</h3>

    {{! Section Évaluations - Calendrier des évaluations }}
    <h4>{{#str}} assessmentcalendar, mod_syllabus {{/str}}</h4>
    {{#evaluationslist}}
        <div class="syllabus_info_block">
            <div class="row greyborder">
                <div class="col-12 col-md-2 greybackground" col-12 col-md-2>
                    <div class="row">
                        <div class="col-12" col-12>{{#userdate}} {{evaluationdate}}, {{#str}} strftimedate {{/str}} {{/userdate}}</div>
                    </div>
                </div>
                <div class="col-12 col-md-10" col-12 col-md-10>
                    <div class="row">
                        <div class="col-12 col-md-3" col-12 col-md-3>{{#str}} assessmentcalendar_activities, mod_syllabus {{/str}}</div>
                        <div class="col-12 col-md-9" col-12 col-md-9>{{{activities}}}</div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-md-3" col-12 col-md-3>{{#str}} assessmentcalendar_learningobjectives, mod_syllabus {{/str}}</div>
                        <div class="col-12 col-md-9" col-12 col-md-9>{{{learningobjectives}}}</div>
                    </div>
                    {{#evaluationcriteria}}
                        <div class="row">
                            <div class="col-12 col-md-3" col-12 col-md-3>{{#str}} assessmentcalendar_evaluationcriteria, mod_syllabus {{/str}}</div>
                            <div class="col-12 col-md-9" col-12 col-md-9>{{{evaluationcriteria}}}</div>
                        </div>
                    {{/evaluationcriteria}}
                    <div class="row">
                        <div class="col-12 col-md-3" col-12 col-md-3>{{#str}} assessmentcalendar_weightings, mod_syllabus {{/str}}</div>
                        <div class="col-12 col-md-9" col-12 col-md-9>{{{weightings}}}</div>
                    </div>
                </div>
            </div>
        </div>
    {{/evaluationslist}}
    <p>{{#str}} evaluations_explanations, mod_syllabus {{/str}}</p>

    {{! Section Évaluations - Consignes et règles pour les évaluations }}
    <h4>{{#str}} rulesassessments, mod_syllabus {{/str}}</h4>
    <div class="syllabus_info_block greyborder">
        {{#evaluationabsence}}
            <div class="row">
                <div class="col-12 col-md-3" col-12 col-md-3>{{#str}} evaluationabsence, mod_syllabus {{/str}}</div>
                <div class="col-12 col-md-9" col-12 col-md-9>{{{evaluationabsence}}}</div>
            </div>
        {{/evaluationabsence}}
        {{#workdeposits}}
            <div class="row">
                <div class="col-12 col-md-3" col-12 col-md-3>{{#str}} workdeposits, mod_syllabus {{/str}}</div>
                <div class="col-12 col-md-9" col-12 col-md-9>{{{workdeposits}}}</div>
            </div>
        {{/workdeposits}}
        {{#authorizedmaterial}}
            <div class="row">
                <div class="col-12 col-md-3" col-12 col-md-3>{{#str}} authorizedmaterial, mod_syllabus {{/str}}</div>
                <div class="col-12 col-md-9" col-12 col-md-9>{{{authorizedmaterial}}}</div>
            </div>
        {{/authorizedmaterial}}
        {{#languagequality}}
            <div class="row">
                <div class="col-12 col-md-3" col-12 col-md-3>{{#str}} languagequality, mod_syllabus {{/str}}</div>
                <div class="col-12 col-md-9" col-12 col-md-9>{{{languagequality}}}</div>
            </div>
        {{/languagequality}}
        {{#successthreshold}}
            <div class="row">
                <div class="col-12 col-md-3" col-12 col-md-3>{{#str}} successthreshold, mod_syllabus {{/str}}</div>
                <div class="col-12 col-md-9" col-12 col-md-9>{{{successthreshold}}}</div>
            </div>
        {{/successthreshold}}
    </div>

{{/hasevaluation}}
