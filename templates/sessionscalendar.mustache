{{!
    Sessions calendar template section.

    Context variables required for this template:
    * hassessions
    * sessionslist
        * date
        * title
        * content
        * activity
        * readingandworks
        * formativeevaluations
        * evaluations
}}

{{#hassessions}}
    <h3>{{#str}} sessionscalendar, mod_syllabus {{/str}}</h3>
    {{#sessionslist}}
        <div class="syllabus_info_block">
            <div class="row greyborder">
                <div class="col-12 col-md-2 greybackground" col-12 col-md-2>
                    <div class="row">
                        <div class="col-12" col-12>{{#userdate}} {{date}}, {{#str}} strftimedate {{/str}} {{/userdate}}</div>
                    </div>
                </div>
                <div class="col-12 col-md-10" col-12 col-md-10>
                    {{#title}}
                        <div class="row">
                            <div class="col-12 col-md-3" col-12 col-md-3>{{#str}} sessionscalendar_titles, mod_syllabus {{/str}}</div>
                            <div class="col-12 col-md-9" col-12 col-md-9>{{{title}}}</div>
                        </div>
                    {{/title}}
                    <div class="row">
                        <div class="col-12 col-md-3" col-12 col-md-3>{{#str}} sessionscalendar_contents, mod_syllabus {{/str}}</div>
                        <div class="col-12 col-md-9" col-12 col-md-9>{{{content}}}</div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-md-3" col-12 col-md-3>{{#str}} sessionscalendar_activities, mod_syllabus {{/str}}</div>
                        <div class="col-12 col-md-9" col-12 col-md-9>{{{activity}}}</div>
                    </div>
                    {{#readingandworks}}
                        <div class="row">
                            <div class="col-12 col-md-3" col-12 col-md-3>{{#str}} sessionscalendar_readingandworks, mod_syllabus {{/str}}</div>
                            <div class="col-12 col-md-9" col-12 col-md-9>{{{readingandworks}}}</div>
                        </div>
                    {{/readingandworks}}
                    {{#formativeevaluations}}
                        <div class="row">
                            <div class="col-12 col-md-3" col-12 col-md-3>{{#str}} sessionscalendar_formativeevaluations, mod_syllabus {{/str}}</div>
                            <div class="col-12 col-md-9" col-12 col-md-9>{{{formativeevaluations}}}</div>
                        </div>
                    {{/formativeevaluations}}
                    {{#evaluations}}
                        <div class="row">
                            <div class="col-12 col-md-3" col-12 col-md-3>{{#str}} sessionscalendar_evaluations, mod_syllabus {{/str}}</div>
                            <div class="col-12 col-md-9" col-12 col-md-9>{{{evaluations}}}</div>
                        </div>
                    {{/evaluations}}
                </div>
            </div>
        </div>
    {{/sessionslist}}
    <p>{{#str}} sessionscalendar_explanations, mod_syllabus {{/str}}</p>
{{/hassessions}}
