<table class="greyborder">
    <tr>
        <td colspan="2" class="full">{{#str}} rulespolicy_explanations, mod_syllabus {{/str}}</td>
    </tr>
    <tr class="even">
        <th><p>{{#str}} studyregulations, mod_syllabus {{/str}}</p><p class="normal">{{#str}} studyregulations_explanations, mod_syllabus {{/str}}</p></th>
