    <tr>
        <th><p>{{#str}} disabilitypolicy, mod_syllabus {{/str}}</p><p class="normal">{{#str}} disabilitypolicy_explanations, mod_syllabus {{/str}}</p></th>
        <td>{{{disabilitypolicy}}}</td>
    </tr>
    {{#policyothers}}
        <tr class="even">
            <th>{{#str}} policyothers, mod_syllabus {{/str}}</th>
            <td>{{{policyothers}}}</td>
        </tr>
    {{/policyothers}}
</table>

